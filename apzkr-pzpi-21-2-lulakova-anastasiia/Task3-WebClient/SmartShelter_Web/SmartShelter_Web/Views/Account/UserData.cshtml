@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;

@model SmartShelter_Web.Models.ViewModel.LoginModel
@{
    Layout = "~/Views/_AuthLayout.cshtml";
}



<div class="row">
    <div class="col-12">
        <form id="registerForm" asp-action="AddUserData" method="post">
            <h2>@localizer["EnterData"]</h2>
            <hr />
            <input hidden asp-for="@Model.Username" />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="row">
                <div class=" mb-3 col-6">
                    <label asp-for="@Model.NewStaff.Name">@localizer["Name"]</label>
                    <input asp-for="@Model.NewStaff.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.NewStaff.Name" class="text-danger"></span>
                </div>
                <div class="f mb-3 col-6">
                    <label asp-for="@Model.NewStaff.Phone">@localizer["Phone"]</label>
                    <input asp-for="@Model.NewStaff.Phone" class="form-control" />
                    <span asp-validation-for="@Model.NewStaff.Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class=" mb-3 col-6">
                    <label asp-for="@Model.NewStaff.DOB">@localizer["DOB"]</label>
                    <input type="date" asp-for="@Model.NewStaff.DOB" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.NewStaff.DOB" class="text-danger"></span>
                </div>
                <div class="col-6 mb-3">
                    <label asp-for="@Model.NewStaff.Position">@localizer["Position"]</label>
                    <input asp-for="@Model.NewStaff.Position" class="form-control" />
                    <span asp-validation-for="@Model.NewStaff.Position" class="text-danger"></span>
                </div>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">@localizer["Register"]</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}