@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div class="card text-center col-10">
        <div class="card-title">@localizer["Animals"]</div>
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link" href="/Animal/Index">@localizer["All"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Aviaries" asp-controller="Aviary">@localizer["Aviaries"]</a>
                </li>
              
            </ul>
        </div>
        <div class="card-body">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts
{
    @await RenderSectionAsync("Scripts", required: false)
}